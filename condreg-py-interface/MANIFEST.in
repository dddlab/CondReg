# Documentation files
include README.md
include LICENSE

# Build configuration
include pyproject.toml
include setup.py
include setup.cfg
include build_cpp.py

# Python package files
recursive-include condreg *.py

# Include C++ source files for building
recursive-include src *.cpp *.hpp *.h

# Include pre-compiled extensions for different platforms
recursive-include condreg *.so      # Linux/macOS shared libraries
recursive-include condreg *.pyd     # Windows Python extensions
recursive-include condreg *.dll     # Windows dynamic libraries

# Include test files for sdist (but not for binary distributions)
recursive-include tests *.py

# Exclude build artifacts and caches
global-exclude *.py[cod] __pycache__ *.so.dSYM
global-exclude *.obj *.lib *.exp *.pdb *.ilk
global-exclude .DS_Store Thumbs.db
global-exclude *.tmp *.temp
global-exclude build/ dist/ *.egg-info/